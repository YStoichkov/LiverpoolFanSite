@model LiverpoolFanSite.Web.ViewModels.Players.CreatePlayerInputModel
@{
    this.ViewData["Title"] = "First Team Players";
}
<hr />
<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <h1 class="text-center">@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <textarea asp-for="LastName" class="form-control" rows="5"></textarea>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Appearances"></label>
        <input asp-for="Appearances" class="form-control" />
        <span asp-validation-for="Appearances" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Goals"></label>
        <input asp-for="Goals" class="form-control" />
        <span asp-validation-for="Goals" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlaceOfBirth"></label>
        <input asp-for="PlaceOfBirth" class="form-control" />
        <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Images"></label>
        <input asp-for="Images" class="form-control" />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShirtNumber"></label>
        <input asp-for="ShirtNumber" class="form-control" />
        <span asp-validation-for="ShirtNumber" class="text-danger"></span>
    </div><div class="form-group">
    <label asp-for="Signed"></label>
    <input asp-for="Signed" class="form-control" />
    <span asp-validation-for="Signed" class="text-danger"></span>
</div>
    @*<div id="IngredientsContainer">
            <label asp-for="Ingredients"></label>
            <a class="btn btn-success" onclick="AddMoreIngredients()">+</a>
        </div>*@
    <hr />
    <input type="submit" class="btn btn-primary" />
    <hr />
    <hr />
</form>

