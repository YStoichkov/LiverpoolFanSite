@using LiverpoolFanSite.Common
@model LiverpoolFanSite.Web.ViewModels.Teams.TeamsListViewModel
@{ this.ViewData["Title"] = "Premier League Table";
                var counter = 1; }

<link href="~/css/plTable.css" rel="stylesheet" />
<hr />
<h1 class="text-center">Premier League Table</h1>
@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
<div class="text-xl-center" style="padding:20px">
    <a asp-controller="Tables" asp-action="Create" class="btn btn-primary btn-lg">Add Team</a>
</div>}
<hr />
<section class="content-info">
    <div class="container paddings-mini">
        <div class="row">
            <div class="col-lg-12">
                <table class="table-striped table-responsive table-hover result-point">
                    <thead class="point-table-head">
                        <tr>
                            <th class="text-left">No</th>
                            <th class="text-left">TEAM</th>
                            <th class="text-center">P</th>
                            <th class="text-center">W</th>
                            <th class="text-center">D</th>
                            <th class="text-center">L</th>
                            <th class="text-center">GS</th>
                            <th class="text-center">GA</th>
                            <th class="text-center">+/-</th>
                            <th class="text-center">PTS</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var team in this.Model.Teams)
                        {
                            <tr>
                                <td class="text-left number">@counter</td>
                                <td class="text-left"> <img src="@team.ImageUrl"><span>@team.Name</span></td>
                                <td>@team.PlayedGames</td>
                                <td>@team.Wins</td>
                                <td>@team.Draws</td>
                                <td>@team.Loses</td>
                                <td>@team.GoalsScored</td>
                                <td>@team.GoalsAgainst</td>
                                <td>@team.Difference</td>
                                <td>@team.Points</td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>