@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@model LiverpoolFanSite.Web.ViewModels.Contacts.ContactFormViewModel 
@{ 
    this.ViewData["Title"] = "Send Us A Message";
}

<section class="page-section" id="contact">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Contact Us</h2>
        </div>
        <form id="contactForm" method="post">
            <div class="row align-items-stretch mb-5">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" style="color:white"></label>
                        <input class="form-control" asp-for="Name" />
                        <p class="help-block text-danger"></p>
                        <span asp-validation-for="Email" class="text-dange"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" style="color:white"></label>
                        <input class="form-control" asp-for="Email" value="@this.User.Identity.Name"/>
                        <p class="help-block text-danger"></p>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-md-0">
                        <label asp-for="Title" style="color:white"></label>
                        <input class="form-control" asp-for="Title"/>
                        <p class="help-block text-danger"></p>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-group-textarea mb-md-0">
                        <label asp-for="Message" style="color:white"></label>
                        <textarea class="form-control" asp-for="Message"></textarea>
                        <p class="help-block text-danger"></p>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <div id="success"></div>
                <button class="btn btn-primary btn-xl text-uppercase" type="submit">Send Message</button>
            </div>
        </form>
    </div>
</section>

<script>
    document.getElementsByClassName('masthead')[0].style.display = 'none';
</script>